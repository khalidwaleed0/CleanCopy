{
  "manifest_version": 3,
  "name": "CleanCopy",
  "version": "0.1",
  "description": "Helps you copy the clean url of any post without any tracking data",
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "permissions": [
    "tabs","clipboardWrite"
  ]
}