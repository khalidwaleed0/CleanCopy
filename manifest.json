{
  "manifest_version": 3,
  "name": "Clean Copy for facebook posts",
  "version": "1.1.1",
  "description": "Helps you copy the clean url of any post without any tracking data with one click",
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "permissions": [
    "clipboardWrite"
  ]
}